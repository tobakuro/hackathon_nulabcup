# Server
SERVER_PORT=8080

# PostgreSQL
# DATABASE_URL takes precedence over individual DB_* variables
# Supabase example: postgres://postgres.<project-ref>:<password>@aws-0-<region>.pooler.supabase.com:6543/postgres
DATABASE_URL=

# Fallback: individual DB_* variables (used when DATABASE_URL is not set)
# devbox 環境では UNIX ソケット接続を使用 (DB_HOST に $PGHOST を指定)
DB_HOST=
DB_PORT=5432
DB_USER=
DB_PASSWORD=
DB_NAME=hackathon
DB_SSLMODE=disable

# Redis
# REDIS_URL takes precedence over individual REDIS_* variables
# Upstash example: rediss://default:<password>@<host>:<port>
REDIS_URL=

# Fallback: individual REDIS_* variables
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false
REDIS_DB=0
